<%- include('partials/header', {page: page }) %>
    <div class="container mt-5 pt-3 text-center">
        <div class="card mx-auto mt-5 border border-dark" style="width: 20rem;">
            <div class="card-header p-0 border-bottom-0">
                <div class="btn-group w-100 row" role="group">
                    <a class="btn btn-outline-dark active col-6 border-0" data-bs-toggle="button" id='loginTab'
                        onclick="switchLogin()">Login</a>
                    <a class="btn btn-outline-dark col-6 border-0" data-bs-toggle="button" id='registerTab'
                        onclick='switchRegister()'>Register</a>
                </div>
            </div>
            <div id='loginCard'>
                <div class="card-body">
                    <h1 class="fst-italic fw-bold mt-5" href="/">stocktracker</h1>
                    <h5 class='mt-3'>Welcome back!</h5>
                    <form action='/login' method='POST' class='mt-5' a>
                        <div>
                            <input type="email" class="form-control" placeholder="Email" name='email' autofocus
                                required>
                        </div>
                        <div class="mt-2">
                            <input type="password" class="form-control" placeholder="Password" name='password' required>
                            <span>Forgot password?</span>
                        </div>
                        <div class="d-grid gap-2 mt-5">
                            <button class="btn btn-dark" type="submit">Login</button>
                        </div>
                    </form>
                </div>
            </div>
            <div id='registerCard' class='d-none'>
                <div class="card-body">
                    <h1 class="fst-italic fw-bold mt-5" href="/">stocktracker</h1>
                    <h5 class='mt-3'>Create a new account!</h5>
                    <form action='/register' method='POST' class='mt-3' a>
                        <div>
                            <input type="text" class="form-control" placeholder="Name" name='name' autofocus required>
                        </div>
                        <div class="mt-2">
                            <input type="email" class="form-control" placeholder="Email" name='email' required>
                        </div>
                        <div class="mt-2">
                            <input type="password" class="form-control" placeholder="Password" name='password'
                                id='password' required>
                        </div>
                        <div class="mt-2">
                            <input type="password" class="form-control" placeholder="Confirm Password" name='password2'
                                id='password2' onkeyup="passwordCheck()" required>
                            <span id='message'> </span>
                        </div>
                        <div class="d-grid gap-2 mt-3">
                            <button id='registerButton' class="btn btn-dark" type="submit">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="login.js" charset="utf-8"></script>
    <%- include('partials/footer') %>