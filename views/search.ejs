<%- include('partials/header', {page: page}) %>


    <div class="container mt-5 w-25">

        <div class="card text-center" style="width: 18rem;">
            <div class="card-body">
                <h1 class="card-title">
                    <%-companyInfo.symbol%>
                </h1>
                <p class="card-text">
                    <%-companyInfo.name%>
                </p>
                <p class="card-text text-muted">
                    <%-companyInfo.stock_exchange%>
                </p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <p class="card-text"><small class="text-muted">Current Price</small></p>

                    $<%-companyInfo.close%>
                </li>
                <% if (userStock) {%>


                    <li class="list-group-item">
                        <p class="card-text"><small class="text-muted">Shares owned</small></p>
                        <%-userStock[0].quantity%>
                    </li>
                    <li class="list-group-item">
                        <p class="card-text"><small class="text-muted">Average Price</small></p>
                        $<%-userStock[0].price%>
                    </li>
                    <li class="list-group-item">
                        <p class="card-text"><small class="text-muted">Profit/loss(%)</small></p>
                        your profit
                    </li>
                    <% }%>

            </ul>
            <div class="card-body">
                <a href="/buy" class="btn btn-success">Buy</a>
                <% if (userStock) {%>
                    <a href="/sell" class="btn btn-danger">Sell</a>
                    <% } else {%>
                        <a href="/sell" class="btn btn-danger disabled">Sell</a>
                        <% }%>
            </div>
        </div>

    </div>
    <%- include('partials/footer') %>