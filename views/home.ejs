<%- include('partials/header', {page: page}) %>



    <div class="section text-center">
        <div class="container mt-5">
            <h1>Hello, <%- name %>.</h1>
        </div>
        <% if (stocks.length) { %>

            <div class="container mt-5 border border-dark">
                <h3 class='mt-3'>Portfolio Summary</h3>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Ticker</th>
                            <th scope="col">Last Price</th>
                            <th scope="col">Average Price</th>
                            <th scope="col">Position</th>
                            <th scope="col">Position Value</th>
                            <th scope="col">Unrealised profit/loss</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let stock of stocks) { %>
                            <tr>
                                <th scope="row">
                                    <%- stock.ticker %>
                                </th>
                                <td>
                                    $<%- stock.lastPrice %>
                                </td>
                                <td>
                                    $<%- stock.price %>
                                </td>
                                <td>
                                    <%- stock.quantity %>
                                </td>
                                <td>
                                    $<%- stock.posValue %>
                                </td>
                                <td <% if (stock.unrealisedValue < 0) {%>
                                    class='text-danger'
                                    <% } else { %>
                                        class='text-success'
                                        <% } %>
                                            >
                                            $<%- stock.unrealisedValue%>, (<%- stock.unrealisedPercent%>%)
                                </td>

                            </tr>
                            <% } %>


                    </tbody>
                </table>
                <div class='mb-3'>
                    <div class='btn-group' role="group">
                        <a class="btn btn-sm btn-outline-dark" href='/buy'>+</a>
                        <a class="btn btn-sm btn-outline-dark" href='/sell'>-</a>
                    </div>
                </div>
                <% } else { %>
                    <div class='mt-5'>
                        <h3>You do not own any stocks.</h3>
                        <a class="btn btn-outline-dark" href='/buy'>Add a stock</a>
                    </div>
                    <% } %>


            </div>
    </div>


    <%- include('partials/footer') %>