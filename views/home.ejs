<%- include('partials/header', {page: page}) %>



    <div class="section text-center">
        <div class="container mt-5">
            <h1>Hello, <%- name %>.</h1>
        </div>

        <div class="container mt-5">
            <h3>Portfolio Summary</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Ticker</th>
                        <th scope="col">Current Price</th>
                        <th scope="col">Buy price</th>
                        <th scope="col">Units</th>
                        <th scope="col">Total Current Value</th>
                        <th scope="col">profit/loss</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (stocks) { %>
                        <% for (let stock of stocks) { %>
                            <tr>
                                <th scope="row">
                                    <p>
                                        <%- stock.ticker %>
                                    </p>
                                </th>
                                <td>
                                    <p>
                                        $<%- stock.currentPrice %>
                                    </p>
                                </td>
                                <td>
                                    <p>
                                        $<%- stock.price %>
                                    </p>
                                </td>
                                <td>
                                    <p>
                                        <%- stock.quantity %>
                                    </p>
                                </td>
                                <td>
                                    <p>
                                        $<%- stock.currentPrice*stock.quantity %>
                                    </p>
                                </td>
                                <td>
                                    <p>
                                        $<%- (stock.currentPrice*stock.quantity) - (stock.price*stock.quantity)%>
                                    </p>
                                </td>

                            </tr>
                            <% } %>
                                <% } %>

                </tbody>
            </table>
            <a class="btn btn-sm btn-success" href='/buy'>+</a>
            <a class="btn btn-sm btn-danger" href='/sell'>-</a>
        </div>
    </div>







    </body>

    </html>